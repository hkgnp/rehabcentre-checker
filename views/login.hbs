{{#extends 'base'}}

{{#block 'title'}} Check Availability {{/block}}

{{#block 'content'}}
<div class="col">
  <form method="POST">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
    <div class="mb-3">
      <input
        type="email"
        name="email"
        placeholder="Enter your email"
        class="form-control"
        id="exampleInputEmail1"
        autofocus
      />
    </div>
    <div class="mb-3">
      <input
        type="password"
        name="password"
        class="form-control"
        placeholder="Enter your password"
        id="exampleInputPassword1"
        autofocus
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
{{/block}}
{{/extends}}
